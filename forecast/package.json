    "@google-cloud/functions-framework": "^2.0.0",
    "axios": "^0.21.1",
    "moment": "^2.29.1",
    "node-html-parser": "^4.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "babel-jest": "^26.3.0",
    "jest": "^26.4.0"
  }
